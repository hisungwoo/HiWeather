<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="현재위치" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/non_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/sunny" />

    <TextView
        android:id="@+id/weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintEnd_toEndOf="@id/imageView"
        app:layout_constraintStart_toStartOf="@id/imageView"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        tools:text="날씨" />



    <TextView
        android:id="@+id/t3h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        app:layout_constraintStart_toEndOf="@id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="온도" />

    <View
        android:id="@+id/line"
        android:layout_width="0dp"
        android:layout_height="0.25dp"
        android:layout_marginTop="25dp"
        android:background="#4682B4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/weather" />

    <TextView
        android:id="@+id/reh_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="습도"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toStartOf="@+id/pop_title"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line" />

    <TextView
        android:id="@+id/pop_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="강수확률"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toStartOf="@+id/r06_title"
        app:layout_constraintStart_toEndOf="@+id/reh_title"
        app:layout_constraintTop_toTopOf="@+id/reh_title" />

    <TextView
        android:id="@+id/r06_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="강수량"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toStartOf="@id/wsd_title"
        app:layout_constraintStart_toEndOf="@+id/pop_title"
        app:layout_constraintTop_toTopOf="@+id/reh_title" />

    <TextView
        android:id="@+id/wsd_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="풍속"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/r06_title"
        app:layout_constraintTop_toTopOf="@id/reh_title" />

    <TextView
        android:id="@+id/reh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/reh_title"
        app:layout_constraintStart_toStartOf="@id/reh_title"
        app:layout_constraintEnd_toEndOf="@+id/reh_title"
        tools:text="습도" />

    <TextView
        android:id="@+id/pop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/reh"
        app:layout_constraintStart_toStartOf="@+id/pop_title"
        app:layout_constraintEnd_toEndOf="@+id/pop_title"
        tools:text="강수확률" />

    <TextView
        android:id="@+id/r06"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/reh"
        app:layout_constraintStart_toStartOf="@+id/r06_title"
        app:layout_constraintEnd_toEndOf="@+id/r06_title"
        tools:text="강수량" />

    <TextView
        android:id="@+id/wsd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/reh"
        app:layout_constraintStart_toStartOf="@+id/wsd_title"
        app:layout_constraintEnd_toEndOf="@+id/wsd_title"
        tools:text="풍속" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/wsd_title"
        app:layout_constraintStart_toStartOf="@+id/reh_title"
        app:layout_constraintTop_toBottomOf="@+id/reh"
        app:layout_constraintVertical_bias="0.49" />


</androidx.constraintlayout.widget.ConstraintLayout>